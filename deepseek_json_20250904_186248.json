{
  "name": "quran-online",
  "version": "1.0.0",
  "description": "A Quran.com-like website with Bengali translation and tafsir",
  "main": "index.html",
  "scripts": {
    "build": "npm run optimize && npm run minify",
    "optimize": "node scripts/optimize.js",
    "minify": "node scripts/minify.js",
    "deploy": "npm run build && netlify deploy --prod --dir=dist",
    "serve": "serve -s . -p 3000"
  },
  "keywords": [
    "quran",
    "islam",
    "bengali",
    "tafsir",
    "pwa"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "css-minify": "^2.0.0",
    "html-minifier": "^4.0.0",
    "serve": "^14.0.0",
    "uglify-js": "^3.17.0"
  }
}